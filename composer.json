{
    "name": "ivqonsanada/phive",
    "description": "A kind of freelancing website for college.",
    "keywords": ["spa", "laravel", "vue"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^10.0",
        "laravel/socialite": "^5.13.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^4.0",
        "pusher/pusher-php-server": "^7.2.4",
        "stevebauman/purify": "^5.0",
        "tymon/jwt-auth": "^2.1.1"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.4.0",
        "doctrine/dbal": "^3.0",
        "spatie/laravel-ignition": "^2.0",
        "fakerphp/faker": "^1.23.1",
        "laravel/dusk": "^8.2",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^6.1",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
              "laravel/dusk"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan jwt:secret --force --ansi"
        ]
    }
}
